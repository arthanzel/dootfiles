#!/bin/bash

if [[ -z $1 || -z $2 ]]; then
	echo "  Usage: extract-jdk pkg-file target-folder"
	echo "  Example: extract-jdk jdk-8u92-macos.pkg jdk-8u92"
	exit 1
fi

FILE=$1
TARGETDIR=$2
if [[ ! -f $FILE ]]; then
	echo "File $FILE doesn't exist."
	exit 2
fi

# Extract the package to a folder
pkgutil --expand "$FILE" "$TARGETDIR"

echo "Done."